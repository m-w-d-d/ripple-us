var didScroll;
var lastScrollTop = 0;
var delta = 5;
var navbarHeight = $('header').outerHeight();

$(window).scroll(function(event){
    didScroll = true;
});

setInterval(function() {
    if (didScroll) {
        hasScrolled();
        didScroll = false;
    }
}, 250);

function hasScrolled() {
    var st = $(this).scrollTop();
    
    // Make sure they scroll more than delta
    if(Math.abs(lastScrollTop - st) <= delta)
        return;
    
    // If they scrolled down and are past the navbar, add class .nav-up.
    // This is necessary so you never see what is "behind" the navbar.
    if (st > lastScrollTop && st > 1){
        // Scroll Down
        $('header').removeClass('nav-down').addClass('nav-up');
      // line added on 13 august 2019
       $('.announcement-bar').css('display','none');
      $('#navigation, #added-box-wrapper').css('margin-top','-34px');
       
      $('header').removeClass('nav-fix');
    } else {
    		if (st < navbarHeight) {
        	if (st === 0 || st < 3) {
          	//$('header').css('position', 'static');
              $('header').addClass('nav-fix');
              $('.announcement-bar').css('display','block');
               $('#navigation, #added-box-wrapper').css('margin-top','0px');
          }
        } else {
        	//$('header').css('position', 'fixed');
         // $('header').removeClass('nav-down');
          //$('header').removeClass('nav-downs');
        }
        // Scroll Up
        if(st + $(window).height() < $(document).height()) {
            $('header').removeClass('nav-up').addClass('nav-down');
           // line added on 13 august 2019
            //$('.announcement-bar').css('display','block');
        }
    }
    
    lastScrollTop = st;
}
 
  
});
  
  

