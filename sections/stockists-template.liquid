{{ 'static.css' | asset_url | stylesheet_tag }}

<div class="full_width">
  <div class="white_bg"></div>
<div class="container">
  <div class="account_sidebar page_sidebar">
<h5 class="hide--mobile">Customer care</h5>
 <h5 class="mobile-show" style="display:none;">Customer care {% include 'icon-chevron-down' %}</h5>   
    <ul>
      {% for link in linklists.customer-care.links %}
      <li class="{% if link.active %}active{% endif %}">
        <a href="{{ link.url }}">{{ link.title }}</a>
      </li>            	
      {% endfor %}

    </ul>
</div>
  
    <div class="static_right_info">
      <div class="right_info_wrapper">
        <h1 class="pagetitle">{{ page.title }}</h1>
        <ul class="stockists-list">
      {% for block in section.blocks %}
          <li>
      		<h3>{{ block.settings.shop_one_title }}</h3>
            <p>{{ block.settings.shop_one_address }}</p>
            
            <p><a href="tel:{{ block.settings.phone }}">{{ block.settings.phone }}</a> 
              <a href="https://{{ block.settings.website }}" target="_blank">{{ block.settings.website }}</a></p>
          </li>
       {% endfor %}
      </ul>
  </div>
</div>
  
</div>


{% schema %}
  {
    "name": "Stockists",
    
  "blocks": [
    {
      "type": "logo_image",
      "name": "Stockists List",
      "settings": [
     
  		{
  "type": "text",
  "id": "shop_one_title",
  "label": "Shop One Title"
  },
   {
  "type": "textarea",
  "id": "shop_one_address",
  "label": "Shop One Address"
  },
     {
  "type": "text",
  "id": "phone",
  "label": "Phone Number"
  },
  {
  "type": "text",
  "id": "website",
  "label": "WebSite Link"
  }
      ]
    }
  ]
  
  }
{% endschema %}

<script>
  
$(document).ready(function(){
	
 
  $(".account_sidebar h5.mobile-show").click(function(){
    $(".account_sidebar ul").slideToggle('show');
  });
  
  
});  
  
  
</script>