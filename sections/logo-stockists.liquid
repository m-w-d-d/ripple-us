       "content": "Logo"
    },
  {
          "type": "text",
          "id": "sto_title",
          "label": "Title"
   }
	
],
"blocks": [
    {
      "type": "text",
      "name": "Stockist Logo",
      "settings": [
        {
          "type": "image_picker",
