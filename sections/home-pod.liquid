<div style="background-color:#F2F2F2!important;"class="home-pod home_merch merch--{{ section.id }}">
  
  
 
  <div class="">
  <div style="background-color:#F2F2F2!important;" class="full__width page-width p-0 w_1053">
    <div  style="   max-width: 900px;"class="home-pod home_merch_wrap merch_{{ section.settings.merch_align }}">
      
      
      <h3 class="small--hide pod-response"style=" font-size:30px!important;padding-bottom: 15px;">{{ section.settings.ho_title | newline_to_br  }}</h3>
            <h3 class="large--hide pod-response"style=" font-size:23px!important;padding-bottom: 20px;">{{ section.settings.ho_title | newline_to_br  }}</h3>
{% if section.settings.ho_info != blank %}
      <div style="    margin-bottom: -19px;"class="home_merchrte">
        {{ section.settings.ho_info  }}
      </div>
        {% endif %}
      <br>  <img style="margin: auto;width: 100%;padding-bottom:10px;"id=""
                 class="lazyload small--hide"
                 src="{{ section.settings.merch_image_pod_desk | img_url: '1000x' }}"
                 data-src="{{ merch_image_pod_desk }}"
                 data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-aspectratio="{{ section.settings.merch_image_title.aspect_ratio }}"
                 data-sizes="auto"data-expand="-20"
                 alt="{{ section.settings.merch_image_title.alt | escape }}"> 
      
            <img style="margin: auto;width: 60%;padding-bottom:10px;"id=""
                 class="lazyload large--hide"
                 src="{{ section.settings.merch_image_pod_mo | img_url: '600x' }}"
                 data-src="{{ merch_image_pod_mo }}"
                 data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-aspectratio="{{ section.settings.merch_image_title.aspect_ratio }}"
                 data-sizes="auto"data-expand="-20"
                 alt="{{ section.settings.merch_image_title.alt | escape }}"> 
        
      {% if section.settings.ho_button != blank %}
       <a href="{{ section.settings.ho_button_link }}" class="btn" tabindex="0">
        <i></i>
        <span>{{ section.settings.ho_button }}</span>
      </a>
      {% endif %}  
      
    </div>
  </div>
  </div>
</div>

