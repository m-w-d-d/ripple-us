<div class="home_merch">
<div class="wholesale_home_merch" style="background-color:{{ section.settings.stand-out-bg }};">
  <div class="home_merchinfo">
  <div class="stand-out-info">
    <div class="home_merch_wrap merch_{{ section.settings.merch_align }}">
      {% if section.settings.ho_title != blank %}
      <h3 class="size_39 gradient_text {{ section.settings.font_chnage }}" style="background-image:linear-gradient(100deg,{{ section.settings.title_first }} 10%, {{ section.settings.title_second }} 63%);">{{ section.settings.ho_title  }}</h3>
      {% endif %}  
       {% if section.settings.ho_info != blank %}
      <div class="home_merchrte">
        {{ section.settings.ho_info | replace: "+", "<sup>+</sup>" }}
      </div>
        {% endif %}  
      {% if section.settings.ho_button != blank %}
      <div class="stand-out-info_btn">
       <a href="{{ section.settings.ho_button_link }}" class="btn" style="background-color:{{ section.settings.ho_background }}; color:{{ section.settings.ho_background_text }}">
        <i></i>
        <span>{{ section.settings.ho_button }}</span>
      </a>
      </div>
      {% endif %}  
      
    </div>
  </div>
  </div>
  <div class="home_merch_desk small--hide">
  {%- assign merch = section.settings.ho_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
  {% include 'image-style' with image: section.settings.ho_image %}
  <img id=""
                 class="lazyload"
                 src="{{ section.settings.ho_image | img_url: '1600x' }}"
                 data-src="{{ merch }}"
                 data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-aspectratio="{{ section.settings.ho_image.aspect_ratio }}"
                 data-sizes="auto"
                 alt="{{ section.settings.ho_image.alt | escape }}">
  </div>
  <div class="home_merch_mo large--hide">
  {%- assign mo_merch = section.settings.ho_image_mo | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
  {% include 'image-style' with image: section.settings.ho_image_mo %}
  <img id=""
                 class="lazyload"
                 src="{{ section.settings.ho_image_mo | img_url: '200x200' }}"
                 data-src="{{ mo_merch }}"
                 data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-aspectratio="{{ section.settings.ho_image_mo.aspect_ratio }}"
                 data-sizes="auto"
                 alt="{{ section.settings.ho_image_mo.alt | escape }}">
  </div>
  </div>
</div>

<style>
.home_merch_wrap h3,
  .home_merch_wrap p{
    color:{{ section.settings.ho_text_color}};
  }
  

  /*
  div.home_merch_wrap .btn i{
